<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_with(model: user, local: true) do |form| %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :email, class: 'form-control' %>
    </div>
    
    <% if current_user.admin && @user != User.find(1) %>
    <div class="field">
      <%= form.label "Admin" %>
      <%= form.check_box :admin %>
    </div>
    
    <div class="field">
      <%= form.label "Freeze" %>
      <%= form.check_box :locked %>
    </div>
    <% end %>
  
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, id: :password, class: 'form-control' %>
    </div>
  
    <div class="field">
		  <%= form.label   :password_confirmation, "Confirmation" %><br>
		  <%= form.password_field   :password_confirmation, class: 'form-control' %><br>
    </div>
    
    <div class="actions">
      <%= form.submit "Update Account", class: "btn btn-primary" %>
    </div>

<% end %>
  </div>
</div>
