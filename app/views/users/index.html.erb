<% provide(:title, 'Users') %>
<ul class="nav">
  <li class="nav-header navbar-text mr-2">
    <h2>Users</h2>
  </li>
  <li class="nav-item navbar-text">
    <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
  </li>
</ul>
<table class="table-dark table-striped">
    <tr>
        <th>Gravatar</th>
        <th>Name</th>
        <th>E-Mail</th>
        <th colspan=3></th>
    </tr>
    <% @users.each do | user | %>
    <tr>
        <td><%= gravatar_for(user, 64) %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Show", user %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
        <% if user.id != 1 %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-link" %></td>
        <% end %>
    </tr>
    <% end %>
</table>
<div>&nbsp;</div>